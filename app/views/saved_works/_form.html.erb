<% if saved_work.new_record? %>
  <%= form_for([current_user, saved_work], method: 'post', html: { class: 'saved_work' }) do |sw| %>
    <%= sw.hidden_field :work_id, :value => @work.id %>
    <%= sw.submit ts("Add to saved list"), class: 'submit_saved_work' %>
  <% end %>
<% else %>
  <%= form_for([current_user, saved_work], method: 'delete', html: { class: 'saved_work' }) do |sw| %>
    <%= sw.hidden_field :work_id, :value => @work.id %>
    <%= sw.submit ts("Remove from saved list"), class: 'submit_saved_work' %>
  <% end %>
<% end %>
